@model MVC21BITV01Test.Models.HoaDonDetailsViewModel

<h1>Chi tiết hóa đơn</h1>

<div>
    <h2>Hóa đơn số: @Model.MaHd</h2>
    <p>Ngày lập: @Model.NgayLapHd.ToString("dd/MM/yyyy")</p>
    <p>Khách hàng: @Model.KhachHang</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Mã SP</th>
            <th>Tên SP</th>
            <th>Đơn vị tính</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietHoaDons)
        {
            <tr>
                <td>@item.MaSp</td>
                <td>@item.TenSp</td>
                <td>@item.DonViTinh</td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia.ToString("C")</td>
                <td>@item.ThanhTien.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h3>Tổng tiền: @Model.TongTien.ToString("C")</h3>
</div>
