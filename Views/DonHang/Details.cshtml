@model MVC21BITV01Test.Models.HoaDonDetailsViewModel

<div class="container mt-5">
    <h1 class="mb-4">Chi tiết hóa đơn</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">Hóa đơn số: @Model.MaHd</h2>
            <p class="card-text">Ngày lập: @Model.NgayLapHd.ToString("dd/MM/yyyy")</p>
            <p class="card-text">Khách hàng: @Model.KhachHang</p>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Mã SP</th>
                <th>Tên SP</th>
                <th>Đơn vị tính</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietHoaDons)
            {
                <tr>
                    <td>@item.MaSp</td>
                    <td>@item.TenSp</td>
                    <td>@item.DonViTinh</td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia.ToString("C")</td>
                    <td>@item.ThanhTien.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="alert alert-info mt-4">
        <h3>Tổng tiền: @Model.TongTien.ToString("C")</h3>
    </div>
</div>
