@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["successMessage"]
    </div>
}
<h1>Thêm mới khách hàng</h1>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="MaKh">Mã khách hàng:</label>
        <input type="text" name="MaKh" id="MaKh" class="form-control" />
    </div>
    <div class="form-group">
        <label for="TenCty">Tên công ty:</label>
        <input type="text" name="TenCty" id="TenCty" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DiaChi">Địa chỉ:</label>
        <input type="text" name="DiaChi" id="DiaChi" class="form-control" />
    </div>
    <div class="form-group">
        <label  
               for="DienThoai">Điện thoại:</label>
        <input type="text" name="DienThoai" id="DienThoai" class="form-control"   />
    </div>
    <div class="form-group">
        <label  
               for="ThanhPho">Thành Phố:</label>
        <input type="text" name="ThanhPho" id="ThanhPho" class="form-control"   />
    </div>
    <button type="submit" class="btn btn-primary">Thêm mới</button>
</form>